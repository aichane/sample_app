<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="card-panel teal" id ="errors_messages">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <div class="card-panel teal" id = "errors_messages">
      <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
      </ul>
    </div>
  </div>
<% end %>